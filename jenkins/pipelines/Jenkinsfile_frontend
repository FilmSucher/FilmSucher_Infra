pipeline {
    agent any

    environment {
        BUILD_DIR = 'dist'
    }

    stages {
	
		stage('Checkout') {
            steps {
                git url: 'https://github.com/FilmSucher/FilmSucher_Front.git', branch: 'master'
            }
        }
		
        stage('Install deps') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
		
		stage('Copy to Ansible container') {
            steps {
                sh '''
                    docker cp ${BUILD_DIR} ansible:/ansible/playbooks/roles/deploy-frontend/files/
                '''
            }
        }
		
		stage('Deploy via Ansible') {
            steps {
                sh '''
                    docker exec ansible \
                      ansible-playbook -i inventory.ini playbooks/deploy-frontend.yml -v
                '''
            }
        }
    }
	
	post {
        failure {
            echo 'Build or deploy failed.'
        }
        success {
            echo 'Frontend deployed successfully.'
        }
    }
}
